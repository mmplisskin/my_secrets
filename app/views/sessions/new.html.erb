<div id=login>
<!-- Button trigger modal -->

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <center>
        <h4 class="modal-title" id="myModalLabel">Please Login </h4>
      </center>
      </div>
      <div class="modal-body">

          <div class="row" id="social">


              <%= link_to '<i class="fa fa-facebook"></i> Facebook'.html_safe, "/auth/facebook", class: 'ui facebook button'%>


          </div>

          <div class="row">

              <%= link_to '<i class="fa fa-google-plus"></i> &nbsp&nbsp Google'.html_safe, "/auth/google", class: 'ui google plus button'%>


          </div>

    </div>

    </div>
  </div>
</div>
<div clas="login_btn">

  <button type="button" class="ui inverted huge black button" data-toggle="modal" data-target="#myModal">
    Login
  </button>

</div>
</div>

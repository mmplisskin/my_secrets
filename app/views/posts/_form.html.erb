

<div class="row">

<%= form_for @post, :html => {:class => "col s12"}  do |f| %>

	<div class="row">
		<div class="input-field col s12">
			<%= f.text_field :title, class:"validate" %>
				<label for="secret_title"></label>
		</div>
	</div>

	<div class="row">
		<div class="input-field col s12">

		<%= f.text_area :description, label: "Secret Details:", class:"materialize-textarea"%>
		</div>
	</div>


	<% emails = []	%>
	<% @post.recipients.each do |recipient| %>
	<% emails << recipient.email %>
	<% end %>

<div class="row">
	<div class="input-field col s12">

		<%= f.label "Secret Recipients" %>
 			<%= f.text_area :emails, value: emails.join(','), 'data-role' => 'tagsinput', label: "Recipient Emails:", class:"materialize-textarea" %>
	</div>
</div>


	<!-- <button class="btn waves-effect waves-light" type="submit" name="action">Submit
    <i class="material-icons">send</i>
  </button> -->
		<center>
	  		<%#=  f.submit "Save Secret", class:'ui standard button inverted'%>
		</center>




<% end %>

</div>


<div class="input-field col s6">
				 <input placeholder="Placeholder" id="first_name" type="text" class="validate">
				 <label for="first_name">First Name</label>
</div>

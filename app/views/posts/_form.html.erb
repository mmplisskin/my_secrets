
<div class="col-md-3"></div>
<div class="col-md-6"</div>

<%= bootstrap_form_for @post  do |f| %>

	<%= f.text_field :title %>

 	<%= f.text_area :description %>

	<% emails = []	%>

<% @post.recipients.each do |recipient| %>

<% emails << recipient.email %>



	<% end %>

 	<%= f.text_field :emails, value: emails.join(','), 'data-role' => 'tagsinput'  %>
		<center>
	  		<%= f.submit %>
		</center>




<% end %>



		<h1>Secrets</h1>
<% if @current_ouser.posts.size > 0  %>
    <div id="googleMap" style="width:80vw;height:20vw;"></div>
		<div class = "last_update">Last Update was <%=  time_ago_in_words@current_ouser.updated_at%> ago </div>
<% end %>

 <% if @current_ouser.latitude && @current_ouser.longitude %>
		From:
			latitude <%= @current_ouser.latitude.round(3) %>
			longitude <%= @current_ouser.longitude.round(3) %>
  <% end %>

		<%= render 'layouts/ok_new' %>
		<div class="ui styled accordion">
		<%= accordion "unique_id" do |a| %>
			<% @posts.each do |post| %>
		  	<h3><% a.group post.title do%><h3>
				<div class="content">
					<p><%= post.description %></p>
					<h4><% post.recipients.each do |r| %>
								<%= r.email %>
							<% end %>
					</h4>
					<p>	<%= link_to "Edit this", edit_post_path(post.id)%>

							<div class="ui secondary button">
								<%= link_to 'delete', post, :method => :delete, :confirm => "You sure?",
																:title => "Delete #{post.id}" %>
									<i class="fa fa-trash-o"></i>
							</div>
					</p>
			</div>
		  <% end %>
		<% end %>
		<% end %>



